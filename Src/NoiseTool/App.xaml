<Application
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="NoiseTool.App"
	StartupUri="MainWindow.xaml">
	<Application.Resources>
		<Color x:Key="SelectColor">#FF161616</Color>
		<!-- Resources scoped at the Application level should be defined here. -->
		<SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="{DynamicResource SelectColor}" />
		<SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="{DynamicResource SelectColor}" />
	</Application.Resources>
</Application>